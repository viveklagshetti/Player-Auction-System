<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlets</servlet-name>
        <servlet-class>com.servlets.LoginServlets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>com.servlets.LogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeamAddServlet</servlet-name>
        <servlet-class>com.servlets.TeamAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerAddServlet</servlet-name>
        <servlet-class>com.servlets.PlayerAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerAddServlets</servlet-name>
        <servlet-class>com.servlets.PlayerAddServlets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuctionServlet</servlet-name>
        <servlet-class>com.servlets.AuctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SoldPlayerServlet</servlet-name>
        <servlet-class>com.servlets.SoldPlayerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlets</servlet-name>
        <url-pattern>/LoginServlets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/LogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamAddServlet</servlet-name>
        <url-pattern>/TeamAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerAddServlet</servlet-name>
        <url-pattern>/PlayerAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerAddServlets</servlet-name>
        <url-pattern>/PlayerAddServlets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuctionServlet</servlet-name>
        <url-pattern>/AuctionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SoldPlayerServlet</servlet-name>
        <url-pattern>/SoldPlayerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
